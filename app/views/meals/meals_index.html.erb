<div class="container container__user-meals">
  <div class="toper">
    <p>
      <%= link_to dashboard_path do %>
        <i class="fa-solid fa-circle-left"></i><span> Retour</span>
      <% end %>
    </p>
  </div>

  <h1>Mes repas</h1>
  <% if @meals.empty? %>
    <p>Tu n'as pas encore saisi de repas. Commence tout de suite en cliquant ğŸ‘‰ <%= link_to "ici", new_meal_path %></p>
  <% else %>
    <ul>
      <% @meals.each do |m| %>
        <% if m.foods.empty? %>
          <li class="user-meal" style="display: none;">
        <% else %>
          <li class="user-meal">
        <% end %>
          <%= link_to m.name.capitalize, meal_path(m) %>
          <%= link_to meal_path(m), data: { turbo_method: :delete, turbo_confirm: "Supprimer ce repas ?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
