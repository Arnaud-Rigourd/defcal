<div class="container__form">

  <%= simple_form_for [meal, food] do |f| %>
    <%= f.input :name,
        label: "Ingrédient",
        placeholder: "Ingrédient - ex : chocolat",
        autofocus: true,
        required: true
    %>
    <%= f.submit "Valider #{["👩‍🍳", "👨‍🍳"].sample}" %>
  <% end %>

</div>
