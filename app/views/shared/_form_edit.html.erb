<div class="container__form--edit">
  <h4>Il ne te reste plus qu'a indiquer la quantité 👇</h4>

  <%= simple_form_for [meal, food] do |f| %>
      <%= f.input :name,
          placeholder: "ingrédient",
          input_html: {data: {products_target:"productName"}, class:"hidden"}
      %>
      <%= f.input :code,
          placeholder:"code barre",
          input_html: {data: {products_target:"productCode"}, class:"hidden"}
      %>
    <%= f.input :quantity,
                placeholder:"quantité (g)",
                required: true,
                autofocus: true %>
    <%= f.submit "Ajouter cet ingrédient ✍️"%>
  <% end %>

</div>
